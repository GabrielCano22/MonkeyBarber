@model Proyecto_final_barberia.Models.barbero

@{
    ViewBag.Title = "Details";
}

<h2>DETALLES DEL BARBERO</h2>

<div id="contenedor">
    <h4 id="seccion">Turno</h4>
    <hr id="linea" />
    <dl class="dl-horizontal">

        <div id="primerFila">
            <dt>
                @Html.DisplayNameFor(model => model.documento)
            </dt>

            <dd>
                |
                @Html.DisplayFor(model => model.documento)
            </dd>

            <dt id="separar">
                @Html.DisplayNameFor(model => model.nombre)
            </dt>

            <dd>
                |
                @Html.DisplayFor(model => model.nombre)
            </dd>
        </div>

        <div id="segundaFila">
            <dt>
                @Html.DisplayNameFor(model => model.direccion)
            </dt>

            <dd>|
                @Html.DisplayFor(model => model.direccion)
            </dd>

            <dt id="separar2">
                @Html.DisplayNameFor(model => model.teléfono)
            </dt>

            <dd>|
                @Html.DisplayFor(model => model.teléfono)
            </dd>
        </div>

        <dt id="pruebaReemplazo">
            @Html.DisplayNameFor(model => model.activo)
        </dt>

        <dd id="pruebaReemplazoOption">
            @Html.DisplayFor(model => model.activo)
        </dd>

    </dl>
</div>
<p id="regreso">
    @Html.ActionLink("EDITAR BARBERO", "Edit", new { id = Model.cod_barbero }) |
    @Html.ActionLink("VER LISTA DE BARBEROS", "Index")
</p>

