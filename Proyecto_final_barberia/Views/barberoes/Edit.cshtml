@model Proyecto_final_barberia.Models.barbero

@{
    ViewBag.Title = "Edit";
}

<h2>EDITAR DATOS DEL BARBERO</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 id="seccion">BARBERO</h4>
    <hr id="linea" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.cod_barbero)

    <div id="primerFila">
        <div class="form-group">
            @Html.LabelFor(model => model.documento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.documento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.documento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div id="segundaFila">
        <div class="form-group">
            @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.teléfono, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.teléfono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.teléfono, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>


    <div class="form-group contenedorActivo">
        @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label col-md-2 pruebaReemplazo" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.activo)
                @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="GUARDAR CAMBIOS" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div id="regreso">
    @Html.ActionLink("VER LISTA DE BARBEROS", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .body-content {
        margin-top: 2%;
        width: 100%;
    }

    .btn-default {
        border-radius:2px;
        margin-top: 2%;
        margin-left: 60%;
        padding-bottom: 8%;
        font-family: Oswald;
        font-weight: bold;
        font-size: 2.3em;
        width: 90%;
        height: 50%;
        color: black;
        background-color: #fcb330;
    }

        .btn-default:hover {
            background-color: #ffd171;
        }

    .form-horizontal {
        width: 100%;
    }

    label {
        text-transform: uppercase;
        font-family: Oswald;
        font-size: 1.3em;
    }

        label.pruebaReemplazo {
            visibility: hidden;
        }

            label.pruebaReemplazo:before {
                content: "BARBERO_ACTIVO";
                visibility: visible;
            }

    #primerFila {
        margin-left: 3%;
        display: inline-flex;
        width: 100%;
    }

    input, select, textarea {
        max-width: 110%;
    }

    #segundaFila {
        margin-left: 3%;
        display: inline-flex;
        width: 100%;
    }

    #turno_activo {
        width: 100%;
        margin-left: 45%;
    }

    select {
        border-radius: 2px;
        width: 40%;
        height: 80%;
    }

    .checkbox {
        height: 150%;
        color: black;
    }

    .contenedorActivo {
        margin-left:25%;
        margin-bottom: 1.6%;
    }

    .form-group {
        display: grid;
        width: 50%;
    }
    .form-group.contenedorActivo{
        margin-top:1%;
        margin-left:40%;
    }
    .form-control {
        border-radius: 2px;
        height: 38px;
    }

    .form-horizontal .control-label {
        text-align: left;
    }

    h2 {
        font-family: Oswald;
        text-align: center;
        font-size: 3em;
        color: #f2b541;
    }

    #seccion {
        margin-left:2%;
        font-family: Oswald;
        font-size: 2em;
        color: white;
    }

    #linea {
        width: 95%;
    }

    #regreso {
        margin-left:2%;
        margin-top: 1%;
        font-family: Oswald;
    }

        #regreso > a {
            color: #ffd171;
            font-size: 1.5em;
        }

    body {
        background-image: url(../../Imagenes/FondoBarbero.png);
        background-attachment:fixed;
        background-size:cover;
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    div {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: white;
    }
</style>
