@model IEnumerable<Proyecto_final_barberia.Models.Turno>

@{
    ViewBag.Title = "Lista";
}

<h2>TURNOS</h2>

<p id="link">
    @Html.ActionLink("AGREGAR NUEVO TURNO", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_barbero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th>OPCIONES DISPONIBLES</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_barbero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.activo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.cod_turno }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.cod_turno }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.cod_turno })
            </td>
        </tr>
    }

</table>

<style>
    th{
        text-transform:uppercase;
    }
    a {
        color: #f2b541;
        text-decoration: none
    }

        a:hover {
            color: #f2b541;
            text-decoration: none
        }
    h2 {
        text-align: center;
        font-family: Oswald;
        font-weight:bold;
        color:#ffff;
        font-size: 3em;
    }

    #link {
        text-align:center;
        font-family: Oswald;
        font-weight: bold;
        font-size: 3em;
    }

    body {
        background-image: url(/Imagenes/FondoClientes.png);
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    .table {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: white;
        border-color: black;
        border-radius: .4em;
        opacity: 80%;
    }
    .table:hover{
        opacity: 100%;
    }

</style>
