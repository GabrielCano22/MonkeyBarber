    }

    .form-group {
        display: grid;
        width: 50%;
    }

    .form-control {
        border-radius: 2px;
        height: 38px;
    }

    .form-horizontal .control-label {
        text-align: left;
    }

    h2 {
        font-family: Oswald;
        text-align: center;
        font-size: 3em;
        color: #f2b541;
    }
    #confirmacion{
        margin-top:-.2%;
    }
    #seccion {
        font-family: Oswald;
        font-size: 2em;
        color: white;
        text-transform: uppercase;
    }

    #linea {
        width: 100%;
    }
    h4{
        margin-top:-10px;
    }
    hr{
        margin-top:10px;
    }
    #regreso {
        margin-top: 2%;
        font-family: Oswald;
    }

        #regreso > a {
            color: #ffd171;
            font-size: 1.5em;
        }

    body {
        background-image: url(../../Imagenes/FondoTurnos.png);
        width: 100%;
        height: 100%;
        overflow-x: hidden;
    }

    div {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: white;
    }
</style>
