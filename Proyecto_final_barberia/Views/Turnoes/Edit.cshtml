            visibility: hidden;
        }

            label.pruebaReemplazo:before {
                content: "TURNO_ACTIVO";
                visibility: visible;
            }

    #primerFila {
        margin-left: 3%;
        display: inline-flex;
        width: 100%;
    }

    input, select, textarea {
        max-width: 110%;
    }

    #segundaFila {
        margin-left: 3%;
        display: inline-flex;
        width: 100%;
    }

    #turno_activo {
        width: 100%;
        margin-left: 45%;
    }

    select {
        border-radius: 2px;
        width: 60%;
        height: 80%;
    }

